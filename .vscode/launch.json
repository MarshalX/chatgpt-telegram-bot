{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Bot: Production Mode",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/bot/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Bot: Development Mode (Hot Reload)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/dev.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "ENVIRONMENT": "development"
            }
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
} 